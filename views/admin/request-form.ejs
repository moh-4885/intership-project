<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>request</title>
    <link rel="stylesheet" href="/css/request.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <header>
      <div class="container">
        <div class="sec1">
          <p class="heading">Welcome worker</p>
        </div>
        <div>
          <div>
            <button id="btn">Logout</button>
          </div>

        </div>
      </div>
    </header>
    <div class="wrapper">
      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title"><%=req.user.name%></h3>
            </div>
            <div class="panel-body">
              <div class="row">
              
                <div class=" col-md-9 col-lg-9 ">
                  <table class="table table-user-information">
                    <tbody>
                      <tr>
                        <td>Fonction :</td>
                        <td><%=req.user.fonction%></td>
                      </tr>
                      <tr>
                        <td>secteur d’activité:</td>
                        <td><%=req.user.secteur%></td>
                      </tr>
                      <tr>
                        <td>Email :</td>
                        <td><a href="mailto:info@support.com"><%=req.user.email%></a></td>
                      </tr>
                      <tr>
                        <td>Phone Number </td>
                        <td><%=req.user.phoneNumber%>
                        </td>
                      </tr>
                      <tr>
                        <td>type de demande</td>
                        <td><%=req.type%></td>
                      </tr>
                      <%if(req.type==="absence"){%>
                        <tr>
                          <tr>
                            <td>date d'absence</td>
                            <td><%=req.absenceDate%></td>
                          </tr>
                          <tr>
                            <tr>
                              <td>de hour</td>
                              <td><%=req.startHour%></td>
                            </tr>
                            <tr>
                              <td>a hour</td>
                              <td><%=req.endHour%></td>
                            </tr>
                          
                              <td>Motif de l’absence</td>
                              <td><%=req.motifabsense%></td>
                            </tr>
                          </tr>
                     <% }else{ %>
                     
                     <tr>
                      <tr>
                        <td>date de début</td>
                        <td><%=req.absenceDate%></td>
                      </tr>
                      <tr>
                        <tr>
                          <td>date de fin</td>
                          <td><%=req.startHour%></td>
                        </tr>
                        <tr>
                          <td>nature des vacances</td>
                          <td><%=req.endHour%></td>
                        </tr>
                      
                          <td>Address</td>
                          <td><%=req.motifabsense%></td>
                        </tr>
                      </tr>
                      <%}%>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <input type="hidden" value="<%=req._id%>" id="id">
    <div class="accept-deny">
      <br>
      <a href="#" id="acceptButton" class="accept">ACCEPT <span class="fa fa-check"></span></a>
      <a href="#" id="denyButton" class="deny">DENY <span class="fa fa-close"></span></a>
    </div>
  </body>
  <script src="/js/requestprossesing.js"></script>

</html>
